<!-- Login Start -->
<div class="login">
  <div class="container">
    {{#if done}}
      <div class="section-header">
      <h3>Reset Password</h3>
      <p class="py-3 alert alert-success">
        Your passsword has been reset. you can use <a href="/users/login">login</a>

      </p>
    </div>
    {{else}}
    {{#if expired}}
    <div class="section-header">
      <h3>Reset Password</h3>
      <p class="py-3 alert alert-warning">
        you link is expired
      </p>
    </div>
    {{else}}

    <div class="section-header">
      <h3>Reset Password</h3>
      <p>
        Please enter your new password
      </p>
    </div>
    <div class="row">
      <div class="col-md-6 mx-auto">
        <form action="/users/reset" method="post" id="formReset">
          <div class="register-form">
            <div class="row">
              <div class="col-md-12">
                <label>Password</label>
                <input name="password" 
                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
                class="form-control" type="password" placeholder="Password" 
                onchange="checkPasswordConfirm('formReset') "
                />
              </div>
              <div class="col-md-12">
                <label>Confirm password</label>
                <input name="confirmPassword" class="form-control" type="password" placeholder="Confirm Password" 
                onkeyup="checkPasswordConfirm('formReset')"
                />
              </div>
              <div class="col-md-12">
                <button class="btn">Submit</button>
              </div>
              {{#if message}}
              <div class="col md-12">
                <div class="p-3 mt-3 alert-warning">
                  {{{message}}}
                </div>
              </div>
              {{/if }}
              <input type="hidden" name="email" value="{{email}}">
              <input type="hidden" name="token" value="{{token}}">
            </div>
          </div>
        </form>
        
      </div>
    </div>
    {{/if}}
    {{/if}}
  </div>
</div>
<!-- Login End -->